{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./lib",
    "typeRoots": ["./types", "../node_modules/@types"],
    "paths": {
      "fetch": ["modules/fetch"]
    }
  },
  "include": ["**/*.ts"]
}
